#_RESET_BUTTON
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  line-height: inherit
  margin: 0
  padding: 0
  text-shadow: inherit

#readymade
  
  // @import './readymade/readymade.styl'
  // Overrides default styles here!
  -webkit-font-smoothing: antialiased !important
  
  h1
  h2
    font-weight: 200
  
  .readymade-generic-page
    a
      color: orange
  
  [role=navigation]
    .fa-lg
      width: 15px
      overflow: hidden
  
  .readymade-subnav
    > a
      background: darken(white, 10%)
      
      &[aria-selected=true]
        background: white

  .marking-surface-tool[data-focused] .marking-surface-tool-focus-root
    filter: none

  .marking-surface-tool[data-selected] .marking-surface-tool-selected-root
    filter: none
  
  .marking-surface
    svg
      overflow: hidden
      
      .selected
        color: orangered !important
    
  .drawing-controls
    a
      text-decoration: none

  fieldset
    border: none
    
    legend
      margin: 0
      text-indent: 0
      padding: 0
      font-weight: bold
    
    .readymade-choice-label
      display: block
  
  .decision-tree-choices
    textarea
      max-width: 95%
      
  .decision-tree
  .readymade-classification-summary
    padding: .5em
    border-radius: .5em
    background: #333
    background: rgba(0, 0, 0, 0.5)
  
  .readymade-field-guide-container
    position: absolute
    top: .5em
    left: 1em
    flex: 2
    min-width: 25%
    width: 400px
    transition: left 1s
    z-index: 10
    
    &[aria-hidden=true]
      left: -100em
    
  .readymade-field-guide
    padding: .5em
    border-radius: .5em
    background: #333
    background: rgba(0, 0, 0, 0.8)
    color: white
    
    .readymade-field-guide-pages
      background: transparent
      color: white
      
      img
        max-width: 300px

      ul
        margin: auto 0
        text-indent: 0
        padding: 0
        list-style-type: none
      
    [role=tab]
      background: transparent
      color: white
      opacity: 0.5
      
      &:hover
      &:focus
        opacity: 1
      
      &[aria-selected=true]
        opacity: 1
        color: gold
      
    .readymade-field-guide-examples
      display: flex
      flex-direction: column
    
    .readymade-field-guide-example:not(:first-child)
      margin-left: 0
      margin-top: 1vw
    
    dl
      dt
        font-weight: bold
      dd
        padding-left: 1em
        margin-left: 0
      
  .drawing-controls
    margin-left: 1em
    
    .readymade-clickable
      display: block
      color: #fff
      background: #000
      background: rgba( 0, 0, 0, .5)
      border: 1px solid transparent
      margin: .2em .3em
      padding: .5em
      text-align: center
      font-size: 1em
      border-radius: .5em
    
    .readymade-clickable-not-checked
      opacity: 1
      
    input[disabled] + span
      opacity: 0.3
    
    input:focus + .readymade-clickable
    button:focus .readymade-clickable
    a:focus
      border: 1px solid gold
      outline: 0
    
    button
      @extends #_RESET_BUTTON
      
      &:focus
        outline: 0
    
    .small
      width: 15px
      height: 15px
      overflow: hidden
      display: inline-block
      margin: .2em .05em
    
    label
    button
    a
      &:hover
      &:focus
        color: gold
        
        .small
          color: gold
    
  .readymade-marking-surface-container
    flex: 6
  
  .readymade-subject-viewer-container
    max-width: 85%
  
  .fixed-panel
    position: fixed
    right: 1em
    top: 6em
    flex: 1
    min-width: 15%
    max-width: 200px
    z-index: 5
    
    .faq-link
      margin-left: 1em
      text-align: center
      
      a
        color: orange
  
  .group-title
    font-size: 1.5em
  
  #periodicals
  
    h3
      font-size: 1em
      text-transform: none
      margin: 0 auto .5em
    
    ul
      list-style-type: none
      margin: 0
      padding: 0
      text-indent: 0
      
      li
        display: inline-block
        width: 33%
        min-height: 400px
        min-width: 450px
    a
      color: orange
      
    a[role=button]
      color: white
      text-decoration: none
      padding: 1em
      margin-right: 1em
      border-radius: 5px
      display: inline-block
      min-height: 350px
      width: 90%
      vertical-align: middle
      text-align: left
      color: #fff
      background: #000
      background: rgba( 0, 0, 0, .2)
      border: 1px solid transparent
      
      &:hover
      &:focus
        background: #000
    
      img
        float: left
        max-width: 200px
        margin-right: .5em
  
  .readymade-mini-tutorial-dialog
    .readymade-mini-tutorial-images
      text-align: center
      
      img
        max-width: 450px
        min-height: 150px
        min-width: 200px
        margin: 0 auto .5em
        flex: none
  
  .zooniverse-profile
    
    .profile-stats
      ul
        list-style-type: none
        margin: 0 0 1em
        text-indent: 0
        padding: 0
        vertical-align: middle
        
        li
          display: inline-block
          background: #000
          background: rgba( 0, 0, 0, .2)
          border: 1px solid transparent
          border-radius: 5px
          text-align: center
          vertical-align: top
          padding: 1em 0
          width: 18%
          min-height: 120px
          margin: 1em .5em 0
          
          .title
            font-weight: bold
          
          .count
            display: block
            font-size: 2em
          
    .item
      width: 16%
      float: none
      display: inline-block
      
      a
        display: inline-block
        width: 100%
        background: #000
        background: rgba( 0, 0, 0, .2)
        border: 1px solid transparent
        border-radius: 5px
        text-align: center
        padding: 1em 0
        
        &:hover
        &:focus
          background: #000
      
        img
          max-height: 250px
          width: auto
          display: inline
  
  .readymade-team-page
    .readymade-team-member-photo
      height: 150px

