#_RESET_BUTTON
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  line-height: inherit
  margin: 0
  padding: 0
  text-shadow: inherit

#readymade
  
  // @import './readymade/readymade.styl'
  // Overrides default styles here!
  
  .readymade-subnav
    > a
      background: darken(white, 10%)
      
      &[aria-selected=true]
        background: white

  .marking-surface-tool[data-focused] .marking-surface-tool-focus-root
    filter: none

  .marking-surface-tool[data-selected] .marking-surface-tool-selected-root
    filter: none
  
  .marking-surface
    svg
      overflow: hidden
    
  .drawing-controls
    a
      text-decoration: none

  fieldset
    border: none
    
    legend
      margin: 0
      text-indent: 0
      padding: 0
      font-weight: bold
    
    .readymade-choice-label
      display: block
  
  .decision-tree
  .readymade-classification-summary
    padding: .5em
    border-radius: .5em
    background: #333
    background: rgba(0, 0, 0, 0.5)
    
  .drawing-controls
    margin-left: 1em
    
    .readymade-clickable
      display: block
      color: #fff
      background: #000
      background: rgba( 0, 0, 0, .5)
      margin: .2em .5em
      padding: .5em
      text-align: center
      font-size: 1em
      border-radius: .5em
      
    input[disabled] + span
      opacity: 0.3
    
    button
      @extends #_RESET_BUTTON
      width: 100%
    
  .readymade-marking-surface-container
    flex: 6
  
  .readymade-subject-viewer-container
  .readymade-field-guide-container
    max-width: 85%
  
  .fixed-panel
    position: fixed
    right: 1em
    top: 6em
    flex: 1
    min-width: 15%
    max-width: 200px

